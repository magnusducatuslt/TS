{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**/*", "**/lib/**/*"]
}
